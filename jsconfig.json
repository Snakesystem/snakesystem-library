{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"baseUrl": "./src",
		"paths": {
			"$routes/*": ["routes/*"],
			"$lib/*": ["lib/*"],
			"$assets/*": ["assets/*"],
			"$components/*": ["components/*"],
			"$directives/*": ["directives/*"],
			"$middleware/*": ["middleware/*"],
		}
	}
}
